				if y ~= 0 and y ~=38 then
					tilemap.set_tile("/level#generateMap", "borders", temp_y+y, temp_x+x, 26)
				end
			elseif y == 0 then
				tilemap.set_tile("/level#generateMap", "walls", temp_y+y, temp_x+x, 57)
				if x ~= 38 then
