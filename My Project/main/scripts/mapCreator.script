function paint_roof(roof_rooms)
	previous = -1
	--[[
	tilemap.set_tile("/level#generateMap", "roof", 96, 234, 20)
	tilemap.set_tile("/level#generateMap", "roof", 96, 233, 59)
	tilemap.set_tile("/level#generateMap", "roof", 97, 232, 39)
	tilemap.set_tile("/level#generateMap", "roof", 98, 232, 39)
	tilemap.set_tile("/level#generateMap", "roof", 99, 232, 39)
	tilemap.set_tile("/level#generateMap", "roof", 100, 234, 49)
	tilemap.set_tile("/level#generateMap", "roof", 100, 233, 10)
	--]]
	for i, room in ipairs(roof_rooms) do
		temp_x = (((6 - 1) * WIDTH) + 1)
		temp_y = (((room - 1) * LENGTH) + 1)

		for x = 0, WIDTH-1 do
			for y = 0, LENGTH-1 do
				tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 19)

				if x == 38 then
					tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 39)
				end
				if (room - previous) > 1 then
					if y == 0 then
						if x==38 then
							tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 10)
						else
							tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 49)
						end
					end
				end

				if roof_rooms[i+1] ~= null then

					if (roof_rooms[i+1] - room > 1) then
						if y == LENGTH-1 then
							if x==38 then
								tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 20)
							else
								tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 59)
							end
						end
					end

				else
					if y == LENGTH-1 then
						if x==38 then
							tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 20)
						else
							tilemap.set_tile("/level#generateMap", "roof", temp_y+y, temp_x+x, 59)
						end
					end
				end
			end
		end
		previous = room		
	end
end