WIDTH = 39
LENGTH = 39

function init(self)
end

function on_message(self, message_id, message, sender)

	math.randomseed(os.time())

	local grid = message
	roof_rooms = {}

	for i = 1, #grid do
		for j = 1, #grid[1] do
			local room = grid[i][j]
			local up = false
			local down = false
			local right = false
			local left = false
			
			if room ~= '' then

				if i == 6 then
					table.insert(roof_rooms, j)
				end
				if string.find(room, "%^") ~= nil then
					grid[i][j] = string.gsub(grid[i][j], "%^", "")
					up = true
				end

				if string.find(room, "v") ~= nil then
					grid[i][j] = string.gsub(grid[i][j], "%v", "")
					down = true
				end

				if string.find(room, "<") ~= nil then
					grid[i][j] = string.gsub(grid[i][j], "%<", "")
					left = true
				end

				if string.find(room, ">") ~= nil then
					grid[i][j] = string.gsub(grid[i][j], "%>", "")
					right = true
				end

				temp_x = (((i - 1) * WIDTH) + 1)
				temp_y = (((j - 1) * LENGTH) + 1)

				if grid[i][j] == "Spawn" then
					down = true
					spawn(temp_x, temp_y)
				elseif grid[i][j] == "C" then
					classroom(temp_x, temp_y)
				elseif grid[i][j] == "R" then
					bathroom(temp_x, temp_y)
				elseif grid[i][j] == "B" then
					basement(temp_x, temp_y)
				elseif grid[i][j] == "G" then
					gym(temp_x, temp_y)
				elseif grid[i][j] == "Boss" then
					boss(temp_x, temp_y)
					local coords = {}
					local cloudX = temp_y
					local cloudY = temp_x

					cloudX = cloudX + (WIDTH-10)
					cloudY = cloudY + ((LENGTH+15)/2)
					table.insert(coords, cloudX)
					table.insert(coords, cloudY)
					msg.post("/chefBoss#chef_boss", 'placeChef', coords)
					
				elseif grid[i][j] == "End" then
					exit(temp_x, temp_y)
				else
					classroom(temp_x, temp_y)
				end

				if up then
					tilemap.set_tile("/level#generateMap", "walls", temp_y+(LENGTH/2), temp_x, 7)
					tilemap.set_tile("/level#generateMap", "walls", (temp_y+(LENGTH/2))-1, temp_x, 7)
					tilemap.set_tile("/level#generateMap", "walls", (temp_y+(LENGTH/2))+1, temp_x, 7)
					tilemap.set_tile("/level#generateMap", "borders", temp_y+(LENGTH/2), temp_x, 0)
					tilemap.set_tile("/level#generateMap", "borders", (temp_y+(LENGTH/2))-1, temp_x, 25)
					tilemap.set_tile("/level#generateMap", "borders", (temp_y+(LENGTH/2))+1, temp_x, 18)

					if grid[i][j] == "End" then
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH/2), temp_x-1, 8)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))-1, temp_x-1, 8)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))+1, temp_x-1, 8)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH/2), temp_x, 9)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))-1, temp_x, 9)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))+1, temp_x, 9)
					end
				end
				if down then
					tilemap.set_tile("/level#generateMap", "walls", temp_y+(LENGTH/2), temp_x+(WIDTH-1), 6)
					tilemap.set_tile("/level#generateMap", "walls", (temp_y+(LENGTH/2))-1, temp_x+(WIDTH-1), 6)
					tilemap.set_tile("/level#generateMap", "walls", (temp_y+(LENGTH/2))+1, temp_x+(WIDTH-1), 6)
					tilemap.set_tile("/level#generateMap", "borders", temp_y+(LENGTH/2), temp_x+(WIDTH-1), 0)
					tilemap.set_tile("/level#generateMap", "borders", (temp_y+(LENGTH/2))-1, temp_x+(WIDTH-1), 25)
					tilemap.set_tile("/level#generateMap", "borders", (temp_y+(LENGTH/2))+1, temp_x+(WIDTH-1), 18)
					
					if grid[i][j] == "End" then
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH/2), temp_x+(WIDTH), 9)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))-1, temp_x+(WIDTH), 9)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))+1, temp_x+(WIDTH), 9)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH/2), temp_x+(WIDTH-1), 8)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))-1, temp_x+(WIDTH-1), 8)
						tilemap.set_tile("/level#generateMap", "locked_doors", (temp_y+(LENGTH/2))+1, temp_x+(WIDTH-1), 8)
					end
				end
				if right then
					tilemap.set_tile("/level#generateMap", "walls", temp_y+(LENGTH-1), temp_x+(WIDTH/2), 7, tilemap.ROTATE_270)
					tilemap.set_tile("/level#generateMap", "walls", temp_y+(LENGTH-1), (temp_x+(WIDTH/2))-1, 7, tilemap.ROTATE_270)
					tilemap.set_tile("/level#generateMap", "walls", temp_y+(LENGTH-1), (temp_x+(WIDTH/2))+1, 7, tilemap.ROTATE_270)
					tilemap.set_tile("/level#generateMap", "borders", temp_y+(LENGTH-1), temp_x+(WIDTH/2), 0)
					tilemap.set_tile("/level#generateMap", "borders", temp_y+(LENGTH-1), (temp_x+(WIDTH/2))-1, 24)
					tilemap.set_tile("/level#generateMap", "borders", temp_y+(LENGTH-1), (temp_x+(WIDTH/2))+1, 26)

					if grid[i][j] == "End" then
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH-1), temp_x+(WIDTH/2), 9, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH-1), (temp_x+(WIDTH/2))-1, 9, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH-1), (temp_x+(WIDTH/2))+1, 9, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH-1)+1, temp_x+(WIDTH/2), 8, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH-1)+1, (temp_x+(WIDTH/2))-1, 8, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y+(LENGTH-1)+1, (temp_x+(WIDTH/2))+1, 8, tilemap.ROTATE_270)
					end
				end
				if left then
					tilemap.set_tile("/level#generateMap", "walls", temp_y, temp_x+(WIDTH/2), 6, tilemap.ROTATE_270)
					tilemap.set_tile("/level#generateMap", "walls", temp_y, (temp_x+(WIDTH/2))-1, 6, tilemap.ROTATE_270)
					tilemap.set_tile("/level#generateMap", "walls", temp_y, (temp_x+(WIDTH/2))+1, 6, tilemap.ROTATE_270)
					tilemap.set_tile("/level#generateMap", "borders", temp_y, temp_x+(WIDTH/2), 0)
					tilemap.set_tile("/level#generateMap", "borders", temp_y, (temp_x+(WIDTH/2))-1, 24)
					tilemap.set_tile("/level#generateMap", "borders", temp_y, (temp_x+(WIDTH/2))+1, 26)

					if grid[i][j] == "End" then
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y, temp_x+(WIDTH/2), 8, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y, (temp_x+(WIDTH/2))-1, 8, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y, (temp_x+(WIDTH/2))+1, 8, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y-1, temp_x+(WIDTH/2), 9, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y-1, (temp_x+(WIDTH/2))-1, 9, tilemap.ROTATE_270)
						tilemap.set_tile("/level#generateMap", "locked_doors", temp_y-1, (temp_x+(WIDTH/2))+1, 9, tilemap.ROTATE_270)
					end
				end	
			end
		end
	end

	--generate roof
	--paint_roof(roof_rooms)
	msg.post('/level#fillEnemies', 'generate', grid)
end

function classroom(temp_x, temp_y)
